<?xml version="1.0"?>
<launch>
    <arg name="model" default="$(find arm_and_gripper)/urdf/ur3_85/ur3_85.urdf.xacro"/> 
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch" >
        <arg name="gui" default="true"/>
    </include>
    <rosparam file="$(find arm_and_gripper)/config/ur3e_robotiq_85_gripper.yaml" command="load"/>
    <node pkg="controller_manager" type="controller_manager" name="ros_controller_manager" respawn="false" output="screen" args="spawn arm_controller gripper"/>

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_gazebo_model" args="-param robot_description -urdf -model ur3e_gripper -z 0" output="screen" respawn="false"/>
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="50.0" />
        <param name="tf_prefix" type="string" value="" />
    </node>

    <node pkg="rostopic" type="rostopic" name="fake_joint_calibration"
            args="pub /calibrated std_msgs/Bool true" />
    
    <!-- joint_state_controller -->
    <rosparam file="$(find arm_and_gripper)/config/joint_state_controller.yaml" command="load"/>
    <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find realsense2_description)/rviz/85.rviz" required="true" />
</launch>